@model YaraTask.Models.Silos.CreateSiloModel

@{ 
    ViewBag.Title = "Add Silo";
}

@using (Html.BeginForm("Create", "Silos", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.MaxCapacity, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(m => m.MaxCapacity, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.SiloNumber, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(m => m.SiloNumber, new { @class = "form-control" })
        </div>

    </div>

    <div class="container">
        <a href="/Home" class="btn btn-danger"><< Back</a>
        <input type="submit" value="Save Silo" class="btn btn-primary" />
    </div>

}


