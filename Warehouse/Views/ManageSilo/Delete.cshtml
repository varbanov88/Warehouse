@model Warehouse.Models.Silos.DeleteSiloModel
    @{
        ViewBag.Title = "Delete Silo";
    }

<h2>Delete Silo</h2>

    @using (Html.BeginForm("Delete", "ManageSilo", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Number, new { @class = "control-label col-sm-4" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.Number, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CurrentLoad, new { @class = "control-label col-sm-4" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.CurrentLoad, new { @class = "form-control", @readonly = "readonly"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MaxCapacity, new { @class = "control-label col-sm-4" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.MaxCapacity, new { @class = "form-control", @readonly = "readonly"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CapacityLeft, new { @class = "control-label col-sm-4" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.CapacityLeft, new { @class = "form-control", @readonly = "readonly"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CurrentCommodity, new { @class = "control-label col-sm-4" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.CurrentCommodity, new { @class = "form-control", @readonly = "readonly"})
            </div>
        </div>


            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    <a href="/ManageSilo/AllSilos" class="btn btn-default">Cancel</a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
    }

