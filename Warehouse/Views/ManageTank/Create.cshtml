@model Warehouse.Models.Tankers.CreateTankModel
@{
    ViewBag.Title = "Add Tanker";
}

<h2>Add Tank to your warehouse</h2>
<br />

@using (Html.BeginForm("Create", "ManageTank", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CurrentFertilizer, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(m => m.CurrentFertilizer, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.MaxCapacity, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(m => m.MaxCapacity, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.TankNumber, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(m => m.TankNumber, new { @class = "form-control" })
        </div>

    </div>

    <div class="container">
        <a href="/Home" class="btn btn-danger">Cancel</a>
        <input type="submit" value="Save Tank" class="btn btn-success" />
    </div>

}
